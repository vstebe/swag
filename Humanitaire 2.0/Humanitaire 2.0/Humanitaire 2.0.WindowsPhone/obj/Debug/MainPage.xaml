<Page
    x:Name="rootPage"
    x:Class="Humanitaire_2._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Humanitaire_2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:Humanitaire_2._0.Pages"
    mc:Ignorable="d">
    
    <Page.Resources>
        <ImageBrush x:Key="menu" ImageSource="./Assets/syringe-24495_1280.png"/>
    </Page.Resources>

    <ScrollViewer ScrollViewer.HorizontalScrollMode="Auto" ScrollViewer.VerticalScrollMode="Disabled">
        <Grid Background="#FF743232" x:Name="rootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Menu -->
            <StackPanel x:Name="menu" HorizontalAlignment="Left" Margin="-150,0,0,0" RenderTransformOrigin="-150,0" Grid.Column="0" Grid.Row="1" Background="#33000000"
                  Width="{Binding width, ElementName=rootGrid}" Canvas.ZIndex="1">

                    <TextBlock x:ConnectionId='2' x:Name="ActuItem" FontSize="20" Text="Actualités" Margin="20" VerticalAlignment="Center"                               />
                    <TextBlock x:ConnectionId='3' x:Name="ContributItem" FontSize="20" Text="Contribuer" Margin="20" VerticalAlignment="Center"                                />
                    <TextBlock x:ConnectionId='4' x:Name="MapItem" FontSize="20" Text="Map" Margin="20" VerticalAlignment="Center"                             />
                
            </StackPanel>

            <!-- Nav bar -->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Image x:ConnectionId='1' x:Name="btnMenu"                        Source="./Assets/syringe-24495_1280.png" Canvas.ZIndex="1" />
                <TextBlock Text="Humanitaire 2.0"  FontSize="20" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
            </Grid>

            <!-- Page Layout -->
            <Grid x:Name="pageLayout" Grid.Row="1">
                <c:Actualité x:Name="Actualite" Visibility="Visible"/>
                <c:Contribution x:Name="Contribution" Visibility="Collapsed"/>
                <c:Map x:Name="Map" Visibility="Collapsed"/>
            </Grid>  
            
        </Grid>        
    </ScrollViewer>
</Page>

